<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/font_size"
            android:padding="@dimen/padding"
            android:text="@string/title_hiscore" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/padding"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_hiscore" />
            <TextView
                android:id="@+id/hiscore"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/button_reset_hiscore"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/button_reset_hiscore" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/font_size"
            android:padding="@dimen/padding"
            android:text="@string/title_icons" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/padding"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radio_mode_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_mode_normal"/>
            <RadioButton
                android:id="@+id/radio_mode_season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_mode_season"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/font_size"
            android:padding="@dimen/padding"
            android:text="@string/title_sound" />
        <Switch
            android:id="@+id/checkbox_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_sound"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>
